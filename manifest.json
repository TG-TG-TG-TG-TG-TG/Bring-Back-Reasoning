{
  "manifest_version": 3,
  "name": "Bring Back Reasoning.",
  "version": "1.2.1",
  "description": "Adds a short instruction to ChatGPT messages (GPT-5 normal only).",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
  "icons": {
    "16":  "icons/logo-16.png",
    "32":  "icons/logo-32.png",
    "48":  "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "action": {
    "default_title": "Bring Back Reasoning.",
    "default_icon": { "16": "icons/logo-16.png", "32": "icons/logo-32.png" },
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "web_accessible_resources": [{
    "resources": ["route-hook.js"],
    "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
  }]
}
